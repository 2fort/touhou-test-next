{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    // "plugins": ["react"],
    "rules": {
        "indent": ["error", 2, {"SwitchCase": 1}],
        "react/jsx-indent": ["error", 2],
        "max-len": ["error", 125],
        "import/no-extraneous-dependencies": 1,
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": 0
    }
}
